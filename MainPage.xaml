<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskq_App.MainPage"
             BackgroundColor="#0d0e17">
    <ScrollView>
        <VerticalStackLayout
            Spacing="16"
            Padding="14,14"
            VerticalOptions="StartAndExpand"
            HorizontalOptions="Fill">

            <Grid
                ColumnSpacing="14"
                RowSpacing="14"
                RowDefinitions="160, 160, 160, 160"
                ColumnDefinitions="1*, 320">

                <BoxView 
                    Grid.Column="0"
                    Grid.RowSpan="4"
                    Color="Green" />

                <BoxView
                    Grid.Column="1"
                    Grid.Row="0"
                    Color="AliceBlue"/>



            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
